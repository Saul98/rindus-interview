# EditorConfig helps maintain consistent coding styles between different editors and IDEs
# See https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Java source files
[*.java]
indent_style = space
indent_size = 2
# Keep in sync with Google Java Format default
max_line_length = 100

# Common config and markup files
[*.{xml,yml,yaml,json,properties}]
indent_style = space
indent_size = 2

# Markdown: keep trailing spaces (used for line breaks) and avoid hard wrapping
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Makefiles require tabs
[Makefile]
indent_style = tab
